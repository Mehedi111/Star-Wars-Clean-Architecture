<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_padding_8"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/specie_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/specie_language_tv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NAME: BESALISK" />

    <TextView
        android:id="@+id/specie_language_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/specie_homeworld_tv"
        app:layout_constraintTop_toBottomOf="@+id/specie_name_tv"
        tools:text="LANGUAGE: BESALISK" />

    <TextView
        android:id="@+id/specie_homeworld_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specie_language_tv"
        tools:text="HOME WORLD: OJOM" />

</androidx.constraintlayout.widget.ConstraintLayout>